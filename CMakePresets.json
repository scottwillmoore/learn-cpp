{
	"version": 6,

	"buildPresets": [
		{
			"configurePreset": "default",
			"displayName": "Default",
			"hidden": true,
			"name": "default"
		},
		{
			"configuration": "debug",
			"displayName": "Debug",
			"inherits": "default",
			"name": "debug"
		},
		{
			"configuration": "release",
			"displayName": "Release",
			"inherits": "default",
			"name": "release"
		}
	],

	"configurePresets": [
		{
			"binaryDir": "${sourceDir}/build/",
			"cacheVariables": {
				"CMAKE_CONFIGURATION_TYPES": "debug;release",
				"CMAKE_EXPORT_COMPILE_COMMANDS": "TRUE"
			},
			"displayName": "Default",
			"generator": "Ninja Multi-Config",
			"name": "default"
		}
	]
}
